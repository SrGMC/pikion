{% include '_header.twig' %}
<main id="main-wrapper" style="margin-top: 100px;">
	<div style="width: 25%; display: inline-block; vertical-align: top;">
		{% if meta.header %}
			<div style="font-size: 72px; display: inline-block; margin-right: 15px">{{ meta.header }}</div>
		{% endif %}
		{% if meta.title %}
			<h1 style="margin: 0; display: inline-block; font-size: 3em">{{ meta.title }}</h1>
		{% endif %}
		{% if meta.description %}
			<p style="margin: 0">{{ meta.description }}</p>
		{% endif %}
		{% if meta.blocks %}
			<p>
				{% for b in meta.blocks %}
					<div class="block">
						<h2 {% if b.color %} class="{{ b.color }}" {% endif %}>{{ b.title }}</h2><br>
						{% if b.list %}
							<ul>
								{% for item in b.list %}
									<li>{{ item }}</li>
								{% endfor %}
							</ul><br>
						{% endif %}
						{% if b.content %}
							{{ b.content }}
						{% endif %}
					</div>
				{% endfor %}
			</p>
		{% endif %}
	</div>
	<div style="display: inline-block; padding-left: 15px;">
		{{ content }}
	</div>
	{% include '_footer.twig' %}
