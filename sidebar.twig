{% include '_header.twig' %}
<div style="width: 33%; display: inline-block; vertical-align: top;">
	{% if meta.header %}
		<div style="font-size: 72px; display: inline-block; margin-right: 15px">{{ meta.header }}</div>
	{% endif %}
	{% if meta.title %}
		<h1 style="margin: 0; display: inline-block; font-size: 3em">{{ meta.title }}</h1>
	{% endif %}
	{% if meta.description %}
		<p style="margin: 0">{{ meta.description }}</p>
	{% endif %}
</div>
<div style="display: inline-block;">
	{{ content }}
</div>
{% include '_footer.twig' %}
